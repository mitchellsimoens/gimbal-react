{
  "name": "gimbal-react",
  "version": "1.0.0",
  "description": "Create a React application to show the output from @modus/gimbal",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*",
    "template/**/*"
  ],
  "scripts": {
    "build": "tsc -p .",
    "build:check": "tsc --noEmit -p .",
    "build:watch": "tsc --watch -p .",
    "lint": "eslint 'src/**/*.ts'",
    "lint-staged": "lint-staged",
    "test": "jest --coverage",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:nocov": "jest"
  },
  "author": "Mitchell Simoens <mitchellsimoens@gmail.com>",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitchellsimoens/gimbal-react.git"
  },
  "bugs": {
    "url": "https://github.com/mitchellsimoens/gimbal-react/issues"
  },
  "homepage": "https://github.com/mitchellsimoens/gimbal-react#readme",
  "lint-staged": {
    "bin/**/*.{js,jsx,ts,tsx},src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "copy-dir": "1.0.0",
    "mkdirp": "0.5.1",
    "rimraf": "2.6.3"
  },
  "devDependencies": {
    "@types/jest": "24.0.12",
    "@types/mkdirp": "0.5.2",
    "@types/node": "12.0.0",
    "@types/rimraf": "2.0.2",
    "@typescript-eslint/eslint-plugin": "1.7.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-import-resolver-typescript": "1.1.1",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jest": "22.5.1",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.13.0",
    "husky": "2.2.0",
    "jest": "24.8.0",
    "lint-staged": "8.1.6",
    "prettier": "1.17.0",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "typescript": "3.4.5"
  }
}
